    <div class="site-section bg-light">
      <div class="container">
        <div class="row">
          <% posts.results.forEach((item) => { %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="post-entry-1 h-100">
              <a href="/blog_single?id=<%=item._id%>">
                <img src="../assets/images/img_1.jpg" alt="Image"
                 class="img-fluid">
              </a>
              <div class="post-entry-1-contents">
                
                <h2><a href="/blog_single?id=<%=item._id%>"><%= item.title%></a></h2>
                <span class="meta d-inline-block mb-3"><%= item.createdAt.slice(0,10)%> <span class="mx-2">by</span> <a href="#">Admin</a></span>
                <p><%= item.desc.slice(0,10)%></p>
              </div>
            </div>
          </div>
          <% })%>
          <%if (posts.next != null && posts.previous != null) { %>
          <input id="page" type="hidden" class="form-control" value="<%= posts.next.page %>">
          <input id="limit" type="hidden" class="form-control" value="<%= posts.next.limit %>">
          <input id="page2" type="hidden" class="form-control" value="<%= posts.previous.page %>">
          <input id="limit2" type="hidden" class="form-control" value="<%= posts.previous.limit %>">
          <% } else if (posts.next == null && posts.previous != null) { %>
          <input id="page2" type="hidden" class="form-control" value="<%= posts.previous.page %>">
          <input id="limit2" type="hidden" class="form-control" value="<%= posts.previous.limit %>">
          <% } else if (posts.next != null && posts.previous == null) { %>
          <input id="page" type="hidden" class="form-control" value="<%= posts.next.page %>">
          <input id="limit" type="hidden" class="form-control" value="<%= posts.next.limit %>">
          <% } else { %>
            <% } %>
          <div class="col-12 mt-5 text-center">
            <nav aria-label="...">
              <ul class="pagination">
                <li class="page-item">
                  <button onclick="decrease()" class="page-link" href="">Previous</button>
                </li>

                
                
                <li class="page-item">
                  <button onclick="increase()" class="page-link" href="#">Next</button>
                </li>
              </ul>
            </nav>
          </div>

        </div>
      </div>
