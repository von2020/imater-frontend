<script>
    function uploadImage() {

        // $('#uploadStatus').text("uploading file, processing...");
        // show that something is loading
        $('#uploadStatus').html("<b>please wait...<img src='https://media.giphy.com/media/y1ZBcOGOOtlpC/giphy.gif' width='30px' /></b>");

        var data = new FormData();

        var theFileType;

        $.each($('#upload-input')[0].files, function(i, file) {
            console.log('file', file)

            data.append('file', file);

            console.log("file type: ", file.type);

            //  get the file type
            theFileType = file.type;
        });
        console.log('filetype', theFileType)
        console.log('dataaaaaaaaaaa', data)
        //  validate type
        if (theFileType == "image/jpg" || theFileType == "image/jpeg" || theFileType == "image/png") {

            //  console.log("file: ", $("#upload-input").val());

                // use ".split("\\").pop()" to the fake path attached to it.
                var file_name = $("#upload-input").val().split("\\").pop();
                console.log("file_name: ", file_name);

                // save the file name into sessionStorage
                sessionStorage.setItem("uploadedFileNameOtherProCert", file_name);
    
                $.ajax({
                    url: '/admin/manage/uploadPostImage',
                    data: data,
                    cache: false,
                    contentType: false,
                    processData: false,
                    method: 'POST',
                    type: 'POST', // For jQuery < 1.9
                    success: function(data){
                        // alert(data);
                        console.log(data);
                        
                            if (data.success == true) {
                                $('#uploadStatus').text(data.result.url);
                                $('#addMoreEH').show();
                        } else {
                                $('#uploadStatus').text(data.status);
                        }
                        
                    }
                });
        }
        else{
        
            console.log("the file type is not supported, pdf only");
            $('#uploadStatus').text("the file type is not supported, pdf only");
            $('#addMoreEH').hide();
                
            }


    }
    </script>
